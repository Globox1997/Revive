{
  "schemaVersion": 1,
  "id": "revive",
  "version": "${version}",
  "name": "Revive",
  "description": "Revive your friends when they died",
  "authors": [
    "Globox_Z"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/revive",
    "sources": "https://github.com/Globox1997/Revive",
    "issues": "https://github.com/Globox1997/Revive/issues"
  },
  "license": "MIT",
  "icon": "assets/revive/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.revive.ReviveMain"
    ],
    "client": [
      "net.revive.ReviveClient"
    ],
    "modmenu": [
      "net.revive.config.ModMenuIntegration"
    ],
    "emi": [
      "net.revive.compat.ReviveEmiPlugin"
    ],
    "rei_client": [
      "net.revive.compat.ReviveReiPlugin"
    ]
  },
  "mixins": [
    "revive.mixins.json"
  ],
  "depends": {
    "java": ">=17",
    "minecraft": "${minecraft_version}",
    "fabric-api": ">=${fabric_version}",
    "fabricloader": ">=${loader_version}",
    "cloth-config2": ">=${cloth_config_version}"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "mc-publish": {
      "modrinth": "MGRhpQYp",
      "curseforge": 533879
    }
  }
}